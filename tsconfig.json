  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src",
  ],
}
